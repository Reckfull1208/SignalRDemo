<Window x:Class="SignalRClient.UserNameDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SignalRClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="300" Height="90">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="True" >
            <TextBlock Text="用户名称:" Margin="2.5" VerticalAlignment="Center" />
            <TextBox Margin="2.5" Name="UserNameTb" />
        </DockPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="确认" Name="ConfirmBtn" Margin="2.5" Width="50" Click="ConfirmBtn_Click" />
            <Button Content="取消" Name="CancelBtn" Margin="2.5" Width="50" Click="CancelBtn_Click" />
        </StackPanel>
    </Grid>
</Window>
